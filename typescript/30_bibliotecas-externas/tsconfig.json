{
  "compilerOptions": {
    "target": "ESNext",
    "noEmitOnError": true,
    "sourceMap": true,
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
